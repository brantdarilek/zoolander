<div class="container half-padding-top">
  <h5>Inline Form</h5>
  <form class="form-inline">
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail3" placeholder="Enter email">
    </div>
    <div class="form-group">
      <label class="sr-only" for="exampleInputName">First Name</label>
      <input type="name" class="form-control" id="exampleInputName" placeholder="First Name">
    </div>
    <div class="checkbox">
      <label>
        <input type="checkbox">Check This Box
      </label>
    </div>
    <button type="submit" class="button lead">Send</button>
  </form>
</div>

<div class="container half-padding-top">
  <h5>Contact Form</h5>
  <form class="form-horizontal">
    <div class="form-group row">
      <div class="col-xs-6">
        <label class="sr-only" for="FirstName">First Name</label>
        <input type="name" class="form-control" id="FirstName" placeholder="First Name">
      </div>
      <div class="col-xs-6">
        <label class="sr-only" for="LastName">Last Name</label>
        <input type="name" class="form-control" id="LastName" placeholder="Last Name">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-6">
        <label class="sr-only" for="Email">Email address</label>
        <input type="email" class="form-control" id="Email" placeholder="Enter email">
      </div>
      <div class="col-xs-6">
        <label class="sr-only" for="Phone">Phone Number</label>
        <input type="phone" class="form-control" id="Phone" placeholder="Phone Number">
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-12">  
        <label>Checkboxes</label>
        <div class="form-checkboxes form-control">
          <div class="form-item">
            <input type="checkbox" name="checkbox-0" value="0" class="form-checkbox">  <label class="option" for="checkbox-0">Checkbox 0</label>
          </div>
          <div class="form-item">
            <input type="checkbox" name="checkbox-1" value="1" class="form-checkbox">  <label class="option" for="checkbox-1">Checkbox 1</label>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-12">  
        <label>Radios <span class="form-required" title="This field is required.">*</span></label>
        <div class="form-radios form-control">
          <div class="form-item">
            <input type="radio" name="radio" value="0" class="form-radio">  <label class="option" for="radio">Radio 0</label>
          </div>
          <div class="form-item">
            <input type="radio" name="radio" value="1" class="form-radio">  <label class="option" for="radio">Radio 1</label>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-12">
       <label for="Textarea"><h6>How can we help you?</h6></label>
       <textarea class="form-control" id="Textarea" rows="3"></textarea>
      </div>
    </div>
    <button type="submit" class="button lead">Send</button>
  </form>
</div>

<div class="container half-padding-top">
  <h5>Modal Form Components</h5>
  <!-- Button trigger modal -->
  <button type="button" class="button lead" data-toggle="modal" data-target="#myModal">
    Launch Form Modal
  </button>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog formModal-dialog" role="document">
    <div class="modal-content formModal-content">
      <div class="modal-header formModal-header">
        <button type="button" class="close formModal-closeIcon" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="formModal-title">This is a Much Longer Optional Form Title with Multiple Lines</h4>
      </div>
      <div class="modal-body formModal-body">
        <form class="form-horizontal">
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="FirstName">Name Label <strong class="formModal-required">*</strong></label>
              <input type="name" class="form-control formModal-input">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Email">Email Label <strong class="formModal-required">*</strong></label>
              <input type="email" class="form-control formModal-input">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Phone">Phone Label <strong class="formModal-required">*</strong></label>
              <input type="phone" class="form-control formModal-input">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="URL">URL Label <strong class="formModal-required">*</strong></label>
              <input type="url" class="form-control formModal-input">
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Select">Select Label <strong class="formModal-required">*</strong></label>
              <select class="form-control formModal-input">
                <option value="">Choose...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Radio">Radio Label <strong class="formModal-required">*</strong></label>
              <div class="radio">
                <label>
                  <input type="radio" name="optionsRadios" value="option1">
                  Option one
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="optionsRadios" value="option2">
                  Option two
                </label>
              </div>
              <div class="radio disabled">
                <label>
                  <input type="radio" name="optionsRadios" value="option3" disabled>
                  Option three is disabled
                </label>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Radio">Yes or No Label <strong class="formModal-required">*</strong></label>
            </div>
            <div class="col-md-6">
              <div class="radio">
                <label>
                  <input type="radio" name="optionsRadios" value="option1">
                  Yes
                </label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="radio">
                <label>
                  <input type="radio" name="optionsRadios" value="option1">
                  No
                </label>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
              <label class="formModal-label" for="Checkbox">Checkbox Label <strong class="formModal-required">*</strong></label>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="optionsCheckbox" value="option1"> Option one
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="optionsCheckbox" value="option2"> Option two
                </label>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-md-12">
             <label class="formModal-label" for="Textarea">Text Area Label <strong class="formModal-required">*</strong></label>
             <textarea class="form-control formModal-input" rows="4"></textarea>
            </div>
          </div>
          <button type="submit" class="button lead">Send</button>
        </form>
      </div>
    </div>
  </div>
</div>
